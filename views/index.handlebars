<div class="container">

	<h1>Eat-Da-Burger!</h1>

<h2>Burger List</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      {{> burgers/burgerDisplay devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
    <li>
      {{this.id}}. {{this.burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burgerName">Name:</label>
    <input type="text" id="burgerName" name="name">
  </div>

  <button type="submit">Submit</button>
</form>
</div>